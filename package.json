{
    "name": "yahtzee",
    "version": "1.0.0",
    "description": "TypeScript implementation of Yahtzee",
    "main": "app.ts",
    "scripts": {
        "build": "npx tsc",
        "build:layer": "rimraf ./layer && mkdir -p layer/nodejs && cp package*.json layer/nodejs && npm install --only=prod --prefix layer/nodejs",
        "deploy": "rimraf ./lib && npm run build && npx serverless deploy --stage dev",
        "build:lars": "pnpx tsc",
        "deploy:lars": "rimraf ./lib && pnpm run build:lars && pnpx serverless deploy --stage dev --aws-profile aaron",
        "destroy:lars": " pnpx serverless remove --stage dev --aws-profile aaron",
        "prettify": "prettier --write .",
        "watch": "jest --watch --coverage",
        "test": "jest --coverage"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aark6324/Yahtzee.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/aark6324/Yahtzee/issues"
    },
    "homepage": "https://github.com/aark6324/Yahtzee#readme",
    "devDependencies": {
        "@types/aws-lambda": "^8.10.91",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.9",
        "jest": "^27.4.7",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "serverless": "^2.72.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "aws-sdk": "^2.1062.0",
        "nanoid": "^3.2.0"
    }
}
